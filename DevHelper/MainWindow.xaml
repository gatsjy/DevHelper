<Window x:Class="DevHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="INPUTTEXT" Text="{Binding INPUTTEXT}" AcceptsReturn="True" TextChanged="TextBox_TextChanged" Grid.Column="0" Grid.Row="1"></TextBox>
        <TextBox x:Name="INPUTTEXT2" Text="{Binding INPUTTEXT2}" AcceptsReturn="True" TextChanged="TextBox2_TextChanged" Grid.Column="1" Grid.Row="1"></TextBox>
        <Border Grid.Column="2" Grid.Row="1">
            <Button Content="Convert ☞" VerticalAlignment="Center"/>
        </Border>
        <TextBox x:Name="CONVERTRESULT" AcceptsReturn="True" Grid.Column="3" Text="{Binding CONVERTRESULT}" Grid.Row="1"/>
    </Grid>
</Window>
